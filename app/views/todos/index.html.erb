<!DOCTYPE html>
<html>
<head>
	<title>Index page</title>
</head>
<body>

  <%= render 'pages/navbar' %>
  <table class="table">

    <thead>
  	  <tr>
  	    <th>Title</th>
  	    <th>Description</th>
  	    <th colspan="3"></th>
  	  </tr>
    </thead>

    <tbody>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.title %></td>
          <td><%= todo.description%></td>
          <td><%= link_to 'Show', todo %></td>
          <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
          <td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back', pages_index_path %>
</body>

</html>


